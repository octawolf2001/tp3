#include <iostream>
using namespace std;

int main() {
    float suma = 0;
	float num;
	float max;
	float min;
	float prom;
  cout << "ingrese 10 numeros " << endl;
    for (int i = 1; i < 10; i++) {
  	cin>>num;
  	if(num>max){
  		max=num;
	  }
    if(num<min){
    	min=num;
	}
	suma=suma+num;
	prom=suma/10;
}
    cout << "el mayor numero es : " << max << endl;
    cout << "el menor es : " << min << endl;
    cout << "la suma es de : " << suma << endl;
    cout << "el promedio es de : " << prom << endl;
    return 0;
}

